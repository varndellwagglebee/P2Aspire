{"Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": ["FromLogContext"]
  },
  "Migrations": {
  
    "SchemaName": "migration",
    "TableName": "ledger",
    
    "Lock": {
      "Enabled": false,
      "Name": "ledger_lock",
      "MaxLifetime": 3600
    },
    // All providers - Set path to migration dll
    "FromPaths": ["..\\..\\src\\P2Aspire.Migrations\\bin\\Debug\\net9.0\\P2Aspire.Migrations.dll" ],
    "FromAssemblies": []
  }
}